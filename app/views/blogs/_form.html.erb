<%= form_with(model: @blog, local: true, url: choose_new_or_edit) do |form| %>
  <% if @blog.errors.any? %>
    <div id="eroor=explanation">
      <h2><%= "#{@blog.errors.count}件のエラーがあります" %></h2>
      <ul>
        <% @blog.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>  
    </div>
  <% end %>
  <table>
    <tr class="blog-title">
      <td><%= form.label "タイトル" %></td>
      <td><%= form.text_field :title %></td>
    </tr>
    <tr class="blog-content">
      <td><%= form.label "本文" %></td>
      <td><%= form.text_area :content %></td>
    </tr>
    <tr class="blog-image">
      <td><%= form.label "画像" %></td>
      <td>
        <%= image_tag(@blog.image.url) if @blog.image && @blog.image.url %>
        <%= form.file_field :image %>
      </td>
      <%# <td></td> %>
      <td><%= form.hidden_field :image_cache %></td>
    </tr>
    <tr>
      <td><%= form.submit "作成" %></td>
    </tr>  
  </table>
<% end %>
